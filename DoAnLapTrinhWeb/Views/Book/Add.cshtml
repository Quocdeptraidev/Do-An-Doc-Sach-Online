@model DoAnLapTrinhWeb.Models.tbSach
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Add Book";
}
<h2>Add Book</h2>
<form asp-action="Add" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="tenSach"></label>
        <input asp-for="tenSach" class="form-control" />
        <span asp-validation-for="tenSach" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="fileUrl" Book Image></label>
        <input type="file" asp-for="fileUrl" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="imageUrl"Book Image></label>
        <input type="file" asp-for="imageUrl" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TheLoaiId">TheLoai</label>
        <select asp-for="TheLoaiId" asp-items="ViewBag.Book"
                class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="TacGiaId">TenTacGia</label>
        <select asp-for="TacGiaId" asp-items="ViewBag.TacGia"
                class="form-control"></select>
    </div>


    <button type="submit" class="btn btn-primary">Add</button>
</form>